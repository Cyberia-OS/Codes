#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");

    //1 задание
    cout << "Анализ числа\n";
    int number, digit, nDigits = 0, nZeros = 0;
    double sum = 0;

    cout << "Введите число: ";
    cin >> number;
    int temp = number;
    if (temp == 0) {
        nDigits = 1;
        nZeros = 1;
    }
    else {
        if (temp < 0) temp = -temp;

        for (; temp > 0; temp /= 10) {
            digit = temp % 10;
            sum += digit;
            nDigits++;
            if (digit == 0) nZeros++;
        }
    }
    double mean = sum / nDigits;
    cout << "Количество цифр: " << nDigits << endl;
    cout << "Сумма цифр: " << sum << endl;
    cout << "Среднее арифметическое: " << mean << endl;
    cout << "Количество нулей: " << nZeros << endl << endl;

    //2 Задание
    cout << "Шахматная доска\n";
    int cellSize;
    cout << "Введите размер клетки: ";
    cin >> cellSize;

    for (int i = 0; i < 8; i++) {
        if (i % 2 == 0) {
            for (int m = 0; m < cellSize; m++) {
                for (int j = 0; j < 8; j++) {
                    if (j % 2 == 0) {
                        for (int k = 0; k < cellSize; k++) {
                            cout << "*";
                        }
                    }
                    else {
                        for (int k = 0; k < cellSize; k++) {
                            cout << "-";
                        }
                    }
                }
                cout << "\n";
            }
        }
        else {
            for (int m = 0; m < cellSize; m++) {
                for (int j = 0; j < 8; j++) {
                    if (j % 2 == 0) {
                        for (int k = 0; k < cellSize; k++) {
                            cout << "-";
                        }
                    }
                    else {
                        for (int k = 0; k < cellSize; k++) {
                            cout << "*";
                        }
                    }
                }
                cout << "\n";
            }
        }
    }

    cout << endl;

    //3 Задание
    cout << "Кафетерий\n";
    int prices[3] = { 50, 100, 120 };
    int people, total = 0;
    cout << "Сколько человек? ";
    cin >> people;
    for (int i = 0; i < people; i++) {
        cout << "\nЧеловек " << i + 1 << ":\n";
        int choice;
        do {
            cout << "1.Чай-50 2.Кофе-100 3.Торт-120 0.Стоп\n";
            cin >> choice;
            if (choice > 0 && choice < 4) {
                total += prices[choice - 1];
                cout << "+" << prices[choice - 1] << " руб\n";
            }
        } while (choice != 0);
    }

    cout << "\nИтого: " << total << " руб\n";
    return 0;
}
