#include <iostream>
using namespace std;

//задание1 опирование массива с использованием указателей
void task1() {
    cout << "задание 1" << endl;

    const int size = 5;
    int source[size] = { 1, 2, 3, 4, 5 };
    int destination[size];

    int* srcPtr = source; //указатели
    int* destPtr = destination;

    for (int i = 0; i < size; i++) { //копируем массив с использованием арифметики указателей
        *(destPtr + i) = *(srcPtr + i); // оператор разыменования
    }

    cout << "исходный массив: ";
    for (int i = 0; i < size; i++) {
        cout << *(srcPtr + i) << " ";
    }
    cout << endl;

    cout << "скопированный массив: ";
    for (int i = 0; i < size; i++) {
        cout << *(destPtr + i) << " ";
    }
    cout << endl;
}

//задание 2 реверс массива с использованием указателей
void task2() {
    cout << "задание 2" << endl;

    const int size = 6;
    int arr[size] = { 10, 20, 30, 40, 50, 60 };

    int* left = arr; //указатель на начало массива
    int* right = arr + size - 1; //указатель на конец массива

    cout << "Исходный массив: ";
    for (int i = 0; i < size; i++) {
        cout << *(arr + i) << " ";
    }
    cout << endl;

    while (left < right) {
        //меняем местами элементы через разыменование
        int temp = *left;
        *left = *right;
        *right = temp;

        //перемещаем указатели
        left++;
        right--;
    }

    cout << "Реверсированный массив: ";
    for (int i = 0; i < size; i++) {
        cout << *(arr + i) << " ";
    }
    cout << endl;
}

//задание 3 Копирование массива в обратном порядке
void task3() {
    cout << "задание 3" << endl;

    const int size = 5;
    int source[size] = { 1, 3, 5, 7, 9 };
    int destination[size];

    int* srcPtr = source; //указатель на начало исходного массива
    int* destPtr = destination + size - 1; //указатель на конец целевого массива

    cout << "Исходный массив: ";
    for (int i = 0; i < size; i++) {
        cout << *(srcPtr + i) << " ";
    }
    cout << endl;

    for (int i = 0; i < size; i++) {
        *destPtr = *srcPtr; //копирование значения
        srcPtr++;  //перемещение указателя исходного массива вперед
        destPtr--; //целевого массива назад
    }

    //возвращаем указатели в начальное положение для вывода
    srcPtr = source;
    destPtr = destination;

    cout << "Массив в обратном порядке: ";
    for (int i = 0; i < size; i++) {
        cout << *(destPtr + i) << " ";
    }
    cout << endl;
}


int main() {
    setlocale(LC_ALL, "RU");
    task1();
    task2();
    task3();

    return 0;
}
