#include <iostream>
using namespace std;


//функция проверяет есть ли значение value в массиве arr размера size
bool contains(int* arr, int size, int value) {
    for (int i = 0; i < size; i++) {
        if (arr[i] == value) {
            return true;  //нашли элемент - возвращаем true
        }
    }
    return false;  
}

//функция проверяет уникальность value в массиве arr до индекса currentindex
bool isunique(int* arr, int currentindex, int value) {
    for (int i = 0; i < currentindex; i++) {
        if (arr[i] == value) {
            return false;  
        }
    }
    return true;  //значение уникально
}

//задача 1 элементы массива A которых нет в B
void task1() {
    int m, n;

    //ввод размеров массивов
    std::cout << "задача 1: элементы массива A, которых нет в B" << endl;
    std::cout << "введите размер массива A (m): ";
    std::cin >> m;
    std::cout << "введите размер массива B (n): ";
    std::cin >> n;

    int* a = new int[m];
    int* b = new int[n];

    //ввод элементов массива A
    std::cout << "введите элементы массива A (" << m << " чисел):" << endl;
    for (int i = 0; i < m; i++) {
        std::cin >> a[i];
    }

    //ввод элементов массива B
    std::cout << "введите элементы массива B (" << n << " чисел):\n";
    for (int i = 0; i < n; i++) {
        std::cin >> b[i];
    }

    //временный массив для хранения результатов (максимальный размер = m)
    int* temp = new int[m];
    int size = 0;  //текущий размер временного массива

    //основной алгоритм: перебираем все элементы массива A
    for (int i = 0; i < m; i++) {
        //если элемент A[i] отсутствует в B и ещё не добавлен в temp
        if (!contains(b, n, a[i]) && isunique(temp, size, a[i])) {
            temp[size] = a[i]; //добавляем элемент во временный массив
            size++;  
        }
    }

    int* c = new int[size];
    for (int i = 0; i < size; i++) {
        c[i] = temp[i];
    }

    std::cout << "результат (массив C размером " << size << "):" << endl;
    for (int i = 0; i < size; i++) {
        std::cout << c[i] << " ";
    }
    std::cout << std::endl;

}

//задача 2 элементыне общие для массивов A и B 
void task2() {
    int m, n;

    std::cout << "задача 2: элементы, не являющиеся общими для A и B" << endl;
    std::cout << "введите размер массива A (m): ";
    std::cin >> m;
    std::cout << "введите размер массива B (n): ";
    std::cin >> n;

    //выделение памяти для массивов A и B
    int* a = new int[m];
    int* b = new int[n];

    //ввод элементов массива A
    std::cout << "введите элементы массива A (" << m << " чисел):" << endl;
    for (int i = 0; i < m; i++) {
        std::cin >> a[i];
    }

    //ввод элементов массива B
    std::cout << "введите элементы массива B (" << n << " чисел):" << endl;
    for (int i = 0; i < n; i++) {
        std::cin >> b[i];
    }

    //временный массив для хранения результатов (максимальный размер = m+n)
    int* temp = new int[m + n];
    int size = 0;  //текущий размер временного массива

    //первый проход: добавляем элементы из A, которых нет в B
    for (int i = 0; i < m; i++) {
        //если элемент A[i] отсутствует в B и уникален в temp
        if (!contains(b, n, a[i]) && isunique(temp, size, a[i])) {
            temp[size] = a[i];  //добавляем элемент во временный массив
            size++;  //увеличиваем счётчик добавленных элементов
        }
    }

    //второй проход: добавляем элементы из B, которых нет в A
    for (int i = 0; i < n; i++) {
        //если элемент B[i] отсутствует в A и уникален в temp
        if (!contains(a, m, b[i]) && isunique(temp, size, b[i])) {
            temp[size] = b[i];  //добавляем элемент во временный массив
            size++;  //увеличиваем счётчик добавленных элементов
        }
    }

    //создание массива точного размера
    int* c = new int[size];
    for (int i = 0; i < size; i++) {
        c[i] = temp[i];
    }

    std::cout << "результат (массив C размером " << size << "):" << endl;
    for (int i = 0; i < size; i++) {
        std::cout << c[i] << " ";
    }
    std::cout << std::endl;

}

int main() {
    int choice;

    do {
        std::cout << "1. задача 1: элементы A, которых нет в B" << endl;
        std::cout << "2. задача 2: элементы, не общие для A и B\n";
        std::cout << "0. выход" << endl;
        std::cout << "выберите задание: ";
        std::cin >> choice; 

        switch (choice) {
        case 1:
            task1();  
            break;
        case 2:
            task2();  
            break;
        case 0:
            std::cout << "выход из программы." << endl;
            break;
        default:
            std::cout << "неверный выбор. попробуйте снова." << endl;
        }
    } while (choice != 0);  

    return 0; 
}
