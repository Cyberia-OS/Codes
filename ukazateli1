#include <iostream>  
using namespace std; 

//задача 3 простое объединение двух массивов 
void task3() {
    int m, n;  

    cout << "задача 3: объединение элементов массивов a и b" << endl;  
    cout << "введите размер массива a (m): ";  
    cin >> m;  
    cout << "введите размер массива b (n): ";  
    cin >> n;  

    int* a = new int[m];  
    int* b = new int[n]; 

    cout << "введите элементы массива a (" << m << " чисел):" << endl;  
    for (int i = 0; i < m; i++) cin >> a[i];  //в цикле считываем m элементов в массив a

    cout << "введите элементы массива b (" << n << " чисел):" << endl; 
    for (int i = 0; i < n; i++) cin >> b[i];  //в цикле считываем n элементов в массив b

    //создание третьего массива
    int* c = new int[m + n]; 

    //копирование всех элементов из массива a
    for (int i = 0; i < m; i++) {  //цикл по всем элементам массива a
        c[i] = a[i];  
    }

    //добавление всех элементов из массива b
    for (int i = 0; i < n; i++) {  //цикл по всем элементам массива b
        c[m + i] = b[i];  
    }

    cout << "результат (объединение, размер " << m + n << "):" << endl;  
    for (int i = 0; i < m + n; i++) cout << c[i] << " ";  //в цикле выводим все элементы массива c
    cout << endl << endl;  

}

//задача 4 удаление четных или нечетных значений
void task4() {
    int m;  

    cout << "задача 4: удаление четных или нечетных значений" << endl; 
    cout << "введите размер массива (m): ";  
    cin >> m; 

    int* a = new int[m]; 

    cout << "введите элементы массива (" << m << " чисел):" << endl;  
    for (int i = 0; i < m; i++) cin >> a[i];  //в цикле считываем m элементов в массив a

    cout << "выберите действие:" << endl;  
    cout << "1 - удалить четные значения" << endl;  
    cout << "2 - удалить нечетные значения" << endl;  
    cout << "ваш выбор: ";  

    int choice;  
    cin >> choice;  

    int count = 0; 
    for (int i = 0; i < m; i++) {  //цикл по всем элементам массива
        if (choice == 1) {  //если выбран вариант 1 
            //удаляем четные - оставляем нечетные
            if (a[i] % 2 != 0) count++;  //если элемент нечетный увеличиваем счетчик
        }
        else if (choice == 2) {  //если выбран вариант 2
            //удаляем нечетные - оставляем четные
            if (a[i] % 2 == 0) count++;  
        }
        else {  
            cout << "неверный выбор" << endl;  
            return;  
        }
    }

    int* result = new int[count];  
    int index = 0;  

    for (int i = 0; i < m; i++) {  
        if (choice == 1 && a[i] % 2 != 0) {  //если выбран вариант 1 и элемент нечетный
            result[index] = a[i];  //копируем элемент в массив
            index++; 
        }
        else if (choice == 2 && a[i] % 2 == 0) {  //если выбран вариант 2 и элемент четный
            result[index] = a[i];  //копируем элемент в массив
            index++; 
        }
    }

    cout << "результат (массив размером " << count << "):" << endl; 
    for (int i = 0; i < count; i++) cout << result[i] << " "; 
    cout << endl << endl; 

}

int main() {
    setlocale(LC_ALL, "RU");
    int choice;

    do {
        cout << "выберите задание" << endl;
        cout << "1 - задача 3: объединение массивов" << endl;
        cout << "2 - задача 4: удаление четных/нечетных" << endl;
        cout << "0 - выход" << endl;
        cout << "ваш выбор: ";
        cin >> choice;

        switch (choice) {
        case 1:
            task3();
            break;
        case 2:
            task4();
            break;
        case 0:
            cout << "выход из программы" << endl;
            break;
        default:
            cout << "неверный выбор попробуйте снова" << endl;
        }
    } while (choice != 0); 

    return 0;
}
