#include <iostream>
using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    // 1 Задание: Сумма чисел от a до 500
    cout << "Задание 1";
    int a, sum;
    sum = 0;
    cout << "Введите число :\n";
    cin >> a;
    int num1 = a; // сохраняем исходное значение a
    while (num1 <= 500)
    {
        sum = sum + num1;
        num1 = num1 + 1;
    }
    cout << "Sum = " << sum << endl << endl;

    // 2 Задание: Возведение в степень
    int main1() {
        int x, y, i;
        float power;
        power = 1;
        cout << "Enter the number X:\n";
        cin >> x;
        cout << "Enter the number Y:\n";
        cin >> y;
        if (y == 0)
        {
            power = 1;
        }
        else
        {
            i = 1;
            while (i <= abs(y))
            {
                power = power * x;
                i = i + 1;
            }
            if (y < 0)
            {
                power = 1 / power;
            }
        }
        cout << "Result = " << power << endl << endl;
        return 1;
    }

    // 4 Задание: Произведение чисел от a до 20
    int a2;
    cout << "Введите число: 1 <=a <= 20): ";
    cin >> a2;

    if (a2 < 1 || a2 > 20) {
        cout << "Ошибка. Число должно быть в диапазоне от 1 до 20" << endl;
        return 1;
    }

    double product = 1;
    for (int i = a2; i <= 20; i++) {
        product *= i;
    }
    cout << "Итог чисел с " << a2 << " до 20: " << product << endl << endl;

    // 5 Задание: Таблица умножения
    int k;
    cout << "Введите число k для таблицы умножения ";
    cin >> k;

    cout << "Таблица умножения для " << k << ":" << endl;
    for (int i = 2; i <= 9; i++) {
        cout << k << " x " << i << " = " << k * i << endl;
    }

    return 0;
}
