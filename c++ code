#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "RU"); 
 
    int arr[3][4] = { {3,5,6,7}, {12,1,1,1}, {0,7,12,1} }; 
    //задание 1
    int sum = 0, min = arr[0][0], max = arr[0][0]; //переменные для суммы мин и макс

    for (int i = 0; i < 3; i++) { //перебирание строк
        for (int j = 0; j < 4; j++) { //столбцы
            sum += arr[i][j]; 
            if (arr[i][j] < min) min = arr[i][j]; //если меньше минимума то обновил
            if (arr[i][j] > max) max = arr[i][j]; //если больше макс то обновил
        }
    }

    cout << "сумма: " << sum << endl; 
    cout << "среднее: " << (double)sum / 12 << endl;
    cout << "минимум: " << min << endl;  
    cout << "максимум: " << max << endl;

    //2 задание
    int row1[3] = { 0 }, col1[4] = { 0 }; 

    for (int i = 0; i < 3; i++) { //перебирание
        for (int j = 0; j < 4; j++) { 
            row1[i] += arr[i][j];  
            col1[j] += arr[i][j]; 
            cout << arr[i][j] << "\t";
        }
        cout << "| " << row1[i] << endl;  
    }

    cout << "--------------------------------------" << endl; 
    for (int j = 0; j < 4; j++) { //перебирание столбцов 
        cout << col1[j] << "\t";//сумма текущего
    }
    cout << "| " << sum << endl; //разделитель и общую сумму

    //задание 3
    int arr1[5][10], arr2[5][5]; 

    for (int i = 0; i < 5; i++) {  //строки перового массива
        for (int j = 0; j < 10; j++) { //столбцы
            arr1[i][j] = i * 10 + j; //массив числами от 0 до 49 
        }
    }

    //второй
    for (int i = 0; i < 5; i++) { //строки второго массива
        for (int j = 0; j < 5; j++) { //столбцы второго массива
            arr2[i][j] = arr1[i][j * 2] + arr1[i][j * 2 + 1]; //пары элементов из первого массива
        }
    }

    cout << "второй массив заполнен" << endl; 

    return 0; 
}
