#include <iostream>
using namespace std;

//функция для вывода массива
void printMatrix(int** arr, int rows, int cols) {
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << arr[i][j] << "\t";
        }
        cout << endl;
    }
}

//задание 2 добавить строку в начало
int** addRowStart(int** arr, int& rows, int cols) {
    int** newArr = new int*[rows + 1];
    
    //новая строка в начало
    newArr[0] = new int[cols]{0}; //заполняем нулями
    
    //копируем старые строки
    for (int i = 0; i < rows; i++) {
        newArr[i + 1] = arr[i];
    }
    
    rows++;
    delete[] arr;
    return newArr;
}

//задание 3 добавить строку в указанную позицию 
int** addRowAtPosition(int** arr, int& rows, int cols, int pos) {
    if (pos < 0 || pos > rows) return arr;
    
    int** newArr = new int*[rows + 1];
    
    //копируем до позиции
    for (int i = 0; i < pos; i++) {
        newArr[i] = arr[i];
    }
    
    //новая строка
    newArr[pos] = new int[cols]{0};
    
    //копируем после позиции
    for (int i = pos; i < rows; i++) {
        newArr[i + 1] = arr[i];
    }
    
    rows++;
    delete[] arr;
    return newArr;
}

//задание 4 удалить строку по указанному номеру (упрощенная)
int** deleteRow(int** arr, int& rows, int cols, int pos) {
    if (pos < 0 || pos >= rows) return arr;
    
    int** newArr = new int*[rows - 1];
    int idx = 0;
    for (int i = 0; i < rows; i++) {
        if (i != pos) {
            newArr[idx++] = arr[i];
        } else {
            delete[] arr[i]; 
        }
    }
    
    rows--;
    delete[] arr;
    return newArr;
}

int** createMatrix(int rows, int cols) {
    int** arr = new int*[rows];
    for (int i = 0; i < rows; i++) {
        arr[i] = new int[cols];
        for (int j = 0; j < cols; j++) {
            arr[i][j] = (i + 1) * 10 + (j + 1); //простые числа
        }
    }
    return arr;
}

int main() {
    setlocale(LC_ALL, "RU");
    int rows = 3, cols = 3;
    
    cout << "начальный массив 3x3:" << endl;
    int** matrix = createMatrix(rows, cols);
    printMatrix(matrix, rows, cols);
    
    cout << "1. добавить строку в начало:" << endl;
    matrix = addRowStart(matrix, rows, cols);
    printMatrix(matrix, rows, cols);
    
    cout << "2. добавить строку в позицию 2:" << endl;
    matrix = addRowAtPosition(matrix, rows, cols, 2);
    printMatrix(matrix, rows, cols);
    
    cout << "3. удалить строку 1:" << endl;
    matrix = deleteRow(matrix, rows, cols, 1);
    printMatrix(matrix, rows, cols);
    
    for (int i = 0; i < rows; i++) delete[] matrix[i];
    delete[] matrix;
    
    return 0;
}
