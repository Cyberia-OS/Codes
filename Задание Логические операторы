#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");

    // Задание 1
    cout << "Задание 1.Проверка на четность" << endl;
    int num1;
    cout << "Введите число: ";
    cin >> num1;
    cout << "Число " << num1 << " - " << (num1 % 2 == 0 ? "четное" : "нечетное") << endl << endl; //Если условие истинно (остаток от деления на два и проверка на равенство нулю, то выводится четное

    // Задание 2

    cout << "Задание 2" << endl;
    double a, b;
    cout << "Введите два числа: ";
    cin >> a >> b;

    if (a < b) {
        cout << "Меньшее: " << a << endl;
    }
    else {
        cout << "Меньшее: " << b << endl;
    }

    // Задание 3
    cout << "Задание 3. Определение знака числа" << endl;
    double num3; // Объявляем переменную для числа
    cout << "Введите число: ";
    cin >> num3;
    if (num3 > 0) cout << "Положительное" << endl; //Если больше 0 - положительное
    else if (num3 < 0) cout << "Отрицательное" << endl; //Если меньше 0 - отрицательное
    else cout << "Ноль" << endl; // Иначе - ноль
    cout << endl;

    // Задание 4
    cout << "Задание 4" << endl;
    double x, y;
    cout << "Введите два числа: ";
    cin >> x >> y;
    if (x == y) { // Проверка равны ли числа
        cout << "Числа равны" << endl; // Если равны - вывод сообщения
    }
    else if (x < y) {
        cout << "В порядке возрастания: " << x << ", " << y << endl; 
    }
    else {
        cout << "В порядке возрастания: " << y << ", " << x << endl;
    }

    return 0;
}
