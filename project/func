void deleteTask() {
    if (tasks.empty()) return;

    cout << "ID для удаления: ";
    int id; cin >> id; clearInput();

    for (int i = 0; i < tasks.size(); i++) {
        if (tasks[i].id == id) {
            tasks.erase(tasks.begin() + i);
            cout << "Задача удалена!\n";
            return;
        }
    }

    cout << "Задача не найдена!\n";
}
