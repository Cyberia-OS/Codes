#include <iostream>
#include <cmath>

using namespace std;

//функция f(x) 
double f(double x) {
    return x * x; //f(x) = x^2
}

int main() {
    setlocale(LC_ALL, "RU");
    double a, b, e;

    cout << "введите нижний предел интегрирования a: ";
    cin >> a;
    cout << "введите верхний предел интегрирования b: ";
    cin >> b;
    cout << "введите точность вычислений e: ";
    cin >> e;

    double I0 = 0.0;
    double I1 = 1e100; 
    int n = 5;
    double h, x;

    //цикл с условием |I1 - I0| > e
    while (fabs(I1 - I0) > e) {
        n = 2 * n; //удвоение количества разбиений
        I0 = I1; // Сохранение предыдущего значения
        h = (b - a) / n; // Шаг интегрирования
        I1 = 0.0; // Сброс накопителя

        //сумма площадей прямоугольников
        //i от 0 до n-1 
        for (int i = 0; i < n; i++) {
            x = a + i * h;  //левая граница интервала
            I1 = I1 + f(x); //накопление суммы
        }

        I1 = I1 * h; //умножение суммы на шаг
    }

    cout << "приближенное значение интеграла: " << I1 << endl;


    return 0;
}
